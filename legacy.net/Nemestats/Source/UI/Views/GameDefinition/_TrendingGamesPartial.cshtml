@using UI.Models.GameDefinitionModels;
@model IEnumerable<TrendingGameViewModel>
<div class="flip-scroll">
    <table class="table table-hover table-striped gameDefinitionsList" id="trendingGamesTable">
        <thead>
            <tr>
                <th class="bgg-link-head"></th>
                <th>Game Name</th>
                <th>Gaming Groups</th>
                <th>Games Played</th>
            </tr>
        </thead>
        @{ var position = 1; }
        @foreach (TrendingGameViewModel trendingGame in Model)
        {
            <tr class="game-item" data-position="@position">
                @{position++;}
                <td class="bgg-link-col">
                    <a href="@Url.Action(MVC.UniversalGame.Details().AddRouteValue("id", trendingGame.BoardGameGeekGameDefinitionId))">
                        @if (!string.IsNullOrEmpty(trendingGame.ThumbnailImageUrl))
                        {
                            <img class="bgg-thumbnail" src="@trendingGame.ThumbnailImageUrl" alt="View universal stats" title="View universal stats"/>
                        }
                        else
                        {
                            <img src="~/Content/Images/bgg_small.png" alt="View universal stats" title="View universal stats"/>
                        }

                    </a>
                </td>
                <td><a href="@Url.Action(MVC.UniversalGame.Details().AddRouteValue("id", trendingGame.BoardGameGeekGameDefinitionId))">@trendingGame.Name</a></td>
                <td>@trendingGame.GamingGroupsPlayingThisGame</td>
                <td>@trendingGame.GamesPlayed</td>
            </tr>
         }
    </table>
</div>