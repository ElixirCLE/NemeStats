@model UI.Models.PlayedGame.EditPlayedGamePlayerPartialViewModel

<li>
	<div class="playerItem">
		<div class="leftItem">
			<span>@Model.PlayerName - Rank:</span>
			<input type="hidden" name="@Model.PlayerName" value="@Model.PlayerId" />
		</div>
		<div class="rightItem fl-right">
			<input class="playerRank"
				   data-rule-required="true"
				   data-rule-min="1"
				   data-val="true"
				   data-val-number="The field must be a number."
				   data-val-required=""
				   aria-required="true"
				   aria-invalid="false"
				   type="text"
				   name="@Model.GameRank"
				   value="@Model.GameRank"
				   style="text-align:center;"
				   onclick="this.focus();this.select()" />

			<button class="removePlayerButton btnRemovePlayer"
					type="button"
					data-playername="@Model.PlayerName"
					data-playerid="@Model.PlayerId"
					title="Remove player">
				<i class='fa fa-remove'></i>
			</button>
			<button class="rankButton-down"
					type="button"
					data-playername="@Model.PlayerName"
					data-playerid="@Model.PlayerId"
					title="Move rank down">
				<i class="fa fa-chevron-down"></i>
			</button>

			<button class="rankButton-up"
					type="button"
					data-playername="@Model.PlayerName"
					data-playerid="@Model.PlayerId"
					title="Move rank up">
				<i class="fa fa-chevron-up"></i>
			</button>
		</div>
		<div class="fl-clear"></div>
	</div>
</li>