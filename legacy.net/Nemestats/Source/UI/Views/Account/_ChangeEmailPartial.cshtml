@model UI.Models.ChangeEmailViewModel


<h4>Update Email Address</h4>
<hr />
@using (Html.BeginForm("ChangeEmailAddress", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.EmailAddress, new { @class = "col-md-3 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(m=>m.EmailAddress)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
            <input type="submit" value="Change Email Address" class="btn btn-default" />
        </div>
    </div>
}