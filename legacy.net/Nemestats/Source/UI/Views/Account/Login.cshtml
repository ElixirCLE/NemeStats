@model UI.Models.LoginViewModel

@{
    ViewBag.Title = "Sign In";
    ViewBag.Description = "Sign in to NemeStats";
    Layout = MVC.Shared.Views._BaseLayout;
}

<h2 class="page-header">@ViewBag.Title</h2>
<hr/> 
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Use a local account to log in.</h4>
            </div>
            <div class="panel-body">
                <section>
                    @Html.ValidationSummary(true)
                    @{ Html.RenderAction(MVC.Account.LoginForm()); }
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            <div class="sidebar-module sidebar-module-inset">
                @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
            </div>
        </section>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <em>@Html.ActionLink("Register", "Register") if you don't have a local account.</em>
        <p>
            @Html.ActionLink("Forget your password?", "ForgotPassword")
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}